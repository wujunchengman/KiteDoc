<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <SignAssembly>false</SignAssembly>
	  <Nullable>enable</Nullable>
    <Version>0.4.1</Version>
    <Company>吴俊城</Company>
    <Product>吴俊城</Product>
    <Description>一组使用OpenXML操作Word文档的快捷API</Description>
    <PackageProjectUrl>weekok.cn</PackageProjectUrl>
    <Authors>吴俊城</Authors>
    <NeutralLanguage>zh</NeutralLanguage>
    <RepositoryUrl>https://github.com/wujunchengman/KiteDoc</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReleaseNotes>增加获取图片Run扩展方法，以支持替换为多张图片</PackageReleaseNotes>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.*" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.*" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
